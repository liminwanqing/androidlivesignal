<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/nameEt"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="name"
        android:visibility="visible"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf = "parent"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/ageEt"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="16"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/nameEt"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/heightEt"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="150"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/ageEt"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/idEt"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/nameEt"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add"
        app:layout_constraintTop_toBottomOf="@+id/idEt"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/queryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="query"
        app:layout_constraintTop_toBottomOf="@+id/addBtn"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/queryAllBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="queryAllBtn"
        app:layout_constraintTop_toBottomOf="@+id/queryBtn"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="deleteBtn"
        app:layout_constraintTop_toBottomOf="@+id/queryAllBtn"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/deleteAllBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="deleteAllBtn"
        app:layout_constraintTop_toBottomOf="@+id/deleteBtn"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="updateBtn"
        app:layout_constraintTop_toBottomOf="@+id/deleteAllBtn"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/labelTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="label"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateBtn"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/displayTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="display"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelTv"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="484dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
